{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    {%  block navigation %}
        <button class="menu-button">
            <i class="bi bi-list"></i>
        </button>
        <nav class="side-navbar">
            <button class="menu-button close">
                <i class="bi bi-x"></i>
            </button>

            <img src="{{ asset('assets/images/logo_menu.svg') }}" alt="Skorou logo" class="navbar-logo"/>

            <div class="menu-container">
                {% if user.logos[0] is defined %}
                    <img src="{{ asset('assets/uploads/logo/' ~ user.logos[0].name) }}" alt="company logo" class="navbar-company-logo"/>
                {% endif %}
                <p class="company-name">{{ app.user.username }}</p>
                <ul>
                    <li><a href="{{ path('dashboard') }}">Tableau de bord</a></li>
                    <li><a href="{{ path('contact') }}">Contact</a></li>
                    {% if is_granted('ROLE_ADMIN') %}
                        <li><a href="{{ path('backoffice') }}">Backoffice</a></li>
                    {% endif %}
                </ul>
            </div>

            <img src="{{ asset('assets/images/nav_green_element.png') }}" alt="green graphic element" class="nav-green-element"/>

            <div class="navbar-bottom-buttons">
                <a href="{{ path('app_logout') }}" class="logout-button">Se d√©connecter</a>
            </div>
        </nav>
    {% endblock %}

    {% block content %}{% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
        <script src="{{ asset('assets/js/animations.js') }}" type="text/javascript"></script>
    {% endblock %}
{% endblock %}
